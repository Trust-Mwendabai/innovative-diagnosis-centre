<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # If the request is for a physical file or directory that exists, serve it directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # For all other requests, send them to index.html so React Router can handle them
  RewriteRule ^ index.html [L]
</IfModule>
